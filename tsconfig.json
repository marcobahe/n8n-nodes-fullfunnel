{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2020",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "credentials/**/*",
        "nodes/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}